
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        /* Set a fixed height for the navbar */
        .fixed-navbar-height {
            height: 80px; /* Fixed height for the navbar */
            padding: 0; /* Remove extra padding */
            line-height: 50px; /* Vertically center content */
        }

        /* Set the dimensions of the logo */
        .custom-logo {
            height: 70px !important; /* Set desired logo height */
            width: 70px !important; /* Set desired logo width */
            margin-left: 1px !important;
        }
    </style>
    <style>
        body {
            font-family: Arial, sans-serif;
            transition: margin-left 0.3s;
        }

        .navbar {
            background-color: #007bff;
            width: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            padding: 10px 20px;
        }

        .custom-navbar-brand .fs-5 {
            margin-top: -2px; /* Adjust as needed */
            line-height: 1.2; /* Adjust line height to control the distance between lines */
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            color: white;
            padding-top: 60px;
            transition: 0.3s;
        }

            .sidebar a {
                color: white;
                padding: 8px 15px;
                text-decoration: none;
                display: block;
                font-size: 18px;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }
    </style>
</head>

<body>
    <!-- Navbar for FirstPage and Login -->
    @if (ViewBag.ShowBasicNavbar1 == true)
    {
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            @*<div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Home")" class="btn text-white">Login</a>
                        </li>
                    </ul>
                </div>*@
        </nav>
    }

    <!-- Sidebar and Navbar for other pages -->
    @if (ViewBag.ShowNavbar1 == true)
    {
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark no-print fixed-navbar-height">
            <div class="container-fluid p-0">
                <!-- Left-aligned logo -->
                <a href="@Url.Action("Index", "Home")" class="navbar-brand align-items-center custom-navbar-brand d-flex ms-1">
                    <img src="https://upload.wikimedia.org/wikipedia/en/3/35/Amdavad_Municipal_Corporation_logo.png"
                         alt="Logo"
                         class="img-fluid bg-white rounded-circle custom-logo">
                    <!-- Text next to the logo -->
                    <span class="ms-2 mb-2 text-white fs-2">
                        Ahmedabad Municipal Corporation
                        <small class="text-muted mt-1 ms-1 fs-5 d-block m-0">અમદાવાદ મ્યુનિસિપલ કોર્પોરેશન</small>
                    </span>
                </a>
                @if (ViewBag.ModuleDept == true)
                {
                    <h3 class="text-end text-white">
                        Theater Tax <i class="fas fa-file-invoice-dollar text-info"></i>
                    </h3>
                }
                <!-- Conditionally render the Login button -->
                @if (ViewBag.Login1 == true)
                {
                    <div class="collapse navbar-collapse mt-2" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item mb-3">
                                <a href="@Url.Action("Home_Page", "Home")" class="btn text-white">Home</a>
                                <a href="@Url.Action("Login", "Home")" class="btn text-white">Login</a>
                                <a href="@Url.Action("Department_Login", "Home")" class="btn text-white">Department Login</a>

                            </li>
                        </ul>
                    </div>
                }

            </div>
        </nav>
    }

    @if (ViewBag.ShowSideBar1 == true)
    {
        <!-- Sidebar Menu -->
        <div class="sidebar show" id="sidebar">
            <div class="mt-4">
                <a href="@Url.Action("ActionRequests","Home")">Actions Requests</a>

                <a href="@Url.Action("PaymentList", "Home")">Payment List</a>
                <a href="@Url.Action("PendingDuesDept", "Home")">Pending Dues</a>


                @*<a href="@Url.Action("History", "Home")">History</a>
        <a href="@Url.Action("Dues", "Home")">Dues</a>
        <a href="@Url.Action("AllReceipt", "Home")">Receipt</a>*@
            </div>
        </div>
    }

    <!-- Main Content -->
    <div class="container mt-5 open-sidebar" id="mainContent">
        @RenderBody()
    </div>

   
</body>
</html>
