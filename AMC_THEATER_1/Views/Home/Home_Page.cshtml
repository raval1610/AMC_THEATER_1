    ViewBag.Login = true;
    ViewBag.Module = false;

}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<style>
    .hero {
        background-color: dimgray;
        padding: 50px 0;
        text-align: center;
    }

    .container {
        border: none !important;
        box-shadow: none !important;
        max-width: 100% !important;
    }

    .section {
        padding: 50px 0;
    }

    .card {
        padding: 20px;
        border-radius: 5px;
    }



    .list-group-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .col-md-6.as img {
        margin-left: 14%;
        border-radius: 50% !important; /* Adjust for rounded corners */
        height: 400px; /* Set a fixed height */
        width: auto; /* Maintain aspect ratio */
        object-fit: cover; /* Ensures the image is properly cropped */
    }

    .list-group-item {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .list-group-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .hover-shadow {
        cursor: pointer;
    }
</style>

<div class="container mt-5 d-flex align-items-center justify-content-between bg-light p-3 border shadow-lg">
    <!-- Left Side: Login Icon with Link -->
    <div class="d-flex flex-column ms-5 align-items-center p-3 rounded">
        <a href="@Url.Action("Login", "Home")" class="text-decoration-none fs-2 text-dark d-flex ms-5 mt-1 flex-column align-items-center justify-content-center">
            <i class="fas fa-user fa-lg"></i>
            Login
        </a>
    </div>

    <!-- Center: Payment Icon -->
    <div class="d-flex flex-column align-items-center p-3 rounded">
        <a href="@Url.Action("Seprate_Theater_Tax", "Home", new { hideMenu = true })" class="text-decoration-none fs-2 text-dark d-flex mt-1 flex-column align-items-center">
            <i class="fas fa-credit-card fa-lg"></i>
            Pay Now
        </a>
    </div>

    <!-- Right Side: Image Link -->
    <div class=" mt-4">

        <img src="https://wallpaperaccess.com/full/3967998.jpg" alt="Image Link" class="img-fluid" style="width: 600px; height: 400px; margin-bottom:10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);">

    </div>
</div>



<!-- About Us Section -->
<div class="row p-4 rounded-lg mt-4 shadow-sm bg-light">
    <!-- Left Column: Image -->
    <div class="col-md-6 d-flex justify-content-center align-items-center">
        <img src="https://static.vecteezy.com/system/resources/previews/004/697/362/original/tax-card-circle-flat-icon-vector.jpg"
             alt="About Us Image" class="img-fluid rounded-circle shadow-md" style="max-width: 400px;">
    </div>

    <!-- Right Column: Text Content -->
    <div class="col-md-6">
        <h2 class="text-dark mb-4" style="font-family: 'Segoe UI', sans-serif; font-weight: 600;">About Us</h2>
