                </li>
                <!-- Fourth Item -->
                <li class="list-group-item d-flex align-items-center border-0 bg-white mb-3 shadow-sm">
                    <div class="d-flex justify-content-center align-items-center bg-danger text-white me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-exclamation-circle fs-4"></i>
