        <script>
            document.getElementById('generateReceiptBtn').addEventListener('click', function () {
                // Hide the form section
                document.getElementById('formSection').classList.add('hidden');

                // Get Theater ID value
                const theaterId = document.getElementById('theaterId').value;

                // Show the receipt section
                document.getElementById('receiptSection').classList.remove('hidden');

                // Update Theater ID in the receipt
                document.getElementById('theaterIdDisplay').textContent = theaterId;
            });

