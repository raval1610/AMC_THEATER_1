@model IEnumerable<AMC_THEATER_1.Models.SearchViewModel>

@{
    ViewBag.Title = "Search Results";
    ViewBag.ShowBasicNavbar = false;
    ViewBag.ShowHomeIcon = true;
    ViewBag.ShowNavbar = true;
    ViewBag.Module = false;
    ViewBag.Login = true;


    //ViewBag.ShowSideBar = true;
}

<style>
    .container {
        margin-left: 50px; /* Set this to match the sidebar width */
        transition: margin-left 0.3s;
        padding: 15px;
    }
</style>

<!-- Include Bootstrap JS (Ensure it is included) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

@using (Html.BeginForm("SearchID", "Home", FormMethod.Post, new { id = "searchForm" }))
{

   
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg rounded-3 ms-4 p-4">
                    <h4 class="card-title text-center bg-light p-3 fw-bold mb-4">Search With Tenament No</h4>
                    <div class="card-body mb-3">
                        <div class="input-group ms-5 gap-3">
                            <input type="text" name="searchTerm" id="searchTerm" class="form-control ms-5" placeholder="Enter Tenament No." aria-label="Tenament No." required>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (Model != null && Model.Any())
{
    var firstTheater = Model.First();

    <!-- Modal -->
    <div class="modal fade" id="resultModal" tabindex="-1" aria-labelledby="resultModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    @*<h5 class="modal-title" id="resultModalLabel">Search Result</h5>*@
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p class="fw-bold">Your Theater ID is : <span class="text-danger fw-bold">@firstTheater.REG_ID</span></p>
                    <p class="fw-bold">Your Theater Name is : <span class="text-danger fw-bold">@firstTheater.T_NAME</span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Script moved BELOW the modal -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var myModal = new bootstrap.Modal(document.getElementById('resultModal'));
        myModal.show();
    });
</script>
}
