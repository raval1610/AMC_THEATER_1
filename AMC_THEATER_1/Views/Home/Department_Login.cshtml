@model AMC_THEATER_1.Models.LoginViewModel

@{
    ViewBag.Title = "Department_Login";
    ViewBag.ShowBasicNavbar = true; // Show only the basic navbar
    ViewBag.ShowNavbar = true;

    ViewBag.Login = true;
    ViewBag.Module = false;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Department Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="mt-5">
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="card shadow-lg" style="width: 427px; margin-top:100px;">
            <div>
                <h3 class="card-title text-center p-2 text-bg-light mt-4 fw-bold m-1">Department Login</h3>
            </div>
            <div class="card-body ms-5 p-4">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @using (Html.BeginForm("Department_Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="un" class="form-label mt-2 fw-bold">Enter UserName:</label>
                @Html.TextBoxFor(m => m.UN, new { @class = "form-control", placeholder = "Enter Department Username", required = "required" })
                @Html.ValidationMessageFor(m => m.UN, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                <label for="pass" class="form-label mt-4 fw-bold">Enter PassWord:</label>
                @Html.PasswordFor(m => m.PASS, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
                @Html.ValidationMessageFor(m => m.PASS, "", new { @class = "text-danger" })
            </div>

                    <div class="mt-5 me-5">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
